  "botAccount": {
    "username": "CosmicBot",
    "password": "",
    "type": "mojang",
    "autoLogin": true,
    "skinSync": true
  },

  "server": {
    "ip": "Blasty8084.aternos.me",
    "port": 31042,
    "version": "1.12.1",
    "autoReconnect": true,
    "pingInterval": 5000
  },

  "dashboard": {
    "port": 3000,
    "theme": "cosmic-horizon",
    "telemetry": true,
    "autoRefresh": true,
    "publicMode": false,
    "https": false,
    "maxConnections": 25
  },

  "reconnect": {
    "onCrashRestart": true,
    "delayBase": 5000,
    "maxRetries": 5,
    "gracePeriod": 15000
