  "logging": {
    "level": "info",
    "fileOutput": true,
    "logFolder": "./logs",
    "maxFileSizeMB": 5,
    "maxRetentionDays": 7,
    "colorize": true
  },

  "feedback": {
    "enabled": true,
    "collectPerformance": true,
    "reportCrashes": true,
    "autoSubmit": false
  },

  "telemetry": {
    "emitInterval": 3000,
    "optimizeEmit": true,
    "maxPingVariance": 10,
    "maxMemoryVariance": 1,
    "trackFPS": true,
    "includeDeviceInfo": true
  },

  "advanced": {
    "pathfinder": true,
    "autoRespawn": true,
    "safetyTimeout": 15000,
    "smartReconnect": true,
    "watchdog": true,
    "latencyGuard": true
  },

  "notifications": {
    "soundEnabled": true,
    "volume": 0.8,
    "desktopAlerts": true,
    "logToConsole": true
  },

  "security": {
    "authToken": "",
    "ipWhitelist": [],
